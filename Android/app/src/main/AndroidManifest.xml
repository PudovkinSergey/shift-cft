<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.ftc.android.shifttemple">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".features.tasks.presentation.TasksActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.books.presentation.BookActivity" />
        <activity android:name=".features.users.presentation.UserLoginActivity" />
        <activity
            android:name=".features.tasks.presentation.TaskActivity"
            android:label="@string/task_activity_title" />
        <activity android:name=".features.tasks.presentation.NewTaskActivity"
            android:label="@string/new_task_title"/>


        <activity
            android:name=".features.users.presentation.UserProfileActivity"
            android:label="@string/my_profile_title" />


        <activity
            android:name=".features.users.presentation.UserRegisterActivity"
            android:label="@string/registration_title" />
    </application>

</manifest>